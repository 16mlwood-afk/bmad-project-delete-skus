# Amazon SP-API Configuration
# Copy this file to .env and fill in your actual credentials

# AWS Credentials (for boto3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Amazon Seller Information
AMAZON_SELLER_ID=your_seller_id
MARKETPLACE_ID=A1F83G8C2ARO7P

# LWA (Login with Amazon) Credentials
LWA_CLIENT_ID=your_lwa_client_id
LWA_CLIENT_SECRET=your_lwa_client_secret
LWA_REFRESH_TOKEN=your_lwa_refresh_token

# Application Configuration
DRY_RUN=true
AGE_THRESHOLD_DAYS=30
BATCH_SIZE=100
LOG_LEVEL=INFO

# Test Mode Configuration (for development and testing)
# TEST_MODE=true: Process only a sample of SKUs (safe, no deletions)
# TEST_MODE=false: Process all SKUs (use DRY_RUN to control actual deletions)
TEST_MODE=false
TEST_SAMPLE_SIZE=10
TEST_SEED_SKUS=SKU1,SKU2,SKU3

# Skip List (SKUs to never delete)
SKIP_SKUS=KEEP-THIS-1,KEEP-THIS-2

# API Resilience Configuration
MAX_RETRIES=3
BASE_DELAY=1.0
MAX_DELAY=60.0
BACKOFF_FACTOR=2.0
JITTER=true
MAX_CONNECTIONS=10
CONNECTION_TIMEOUT=30.0
READ_TIMEOUT=60.0
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_ERROR_RATE_THRESHOLD=0.5
